% Comando para mostrar la fecha en formato abreviado
%%  Por ejemplo: 26/Mar/2011
\def\abrevHoy{%
    \number\day/%
    \ifcase\month
    \or
      Ene%
    \or
      Feb%
    \or
      Mar%
    \or
      Abr%
    \or
      May%
    \or
      Jun%
    \or
      Jul%
    \or
      Ago%
    \or
      Sep%
    \or
      Oct%
    \or
      Nov%
    \or
      Dic%
    \fi
    /\number\year
  }%

